{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist-scripts",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "noEmit": false,
    "baseUrl": ".",

    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/scripts/**/*.ts"]
}
